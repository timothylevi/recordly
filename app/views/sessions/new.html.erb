<main class="page login-page">
  <h2 class="page-title">Log in</h2>

  <div class="page-section">
    <div class="page-form">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Log in" %>
      <% end %>

      <p><%= link_to "Register", new_user_path %></p>
    </div>
  </div>
</main>
